<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:m="using:GraphStudy.Models"
		xmlns:vm="using:GraphStudy.ViewModels"
		xmlns:v="using:GraphStudy.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GraphStudy.Views.MainWindow"
        Icon="/Assets/graphtree.ico"
        Title="GraphStudy">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Grid ColumnDefinitions="*,Auto" RowDefinitions="*,Auto">
		
		<Grid>
			<TabControl>
				<TabItem Header="Graph">
					<v:GraphView Margin="4" DataContext="{Binding Graph, Mode=OneWay}"/>
				</TabItem>
				<TabItem Header="Matrix">
					<v:MatrixView Margin="4" DataContext="{Binding Matrix, Mode=OneWay}"/>
				</TabItem>
			</TabControl>
		</Grid>
		
		<Grid Grid.Column="1" Width="200" Margin="8" RowDefinitions="*,Auto">
			<v:SettingsView DataContext="{Binding Settings, Mode=OneWay}"/>
			<DockPanel Grid.Row="1">
				<StackPanel>
					<Button MinWidth="100" Command="{Binding Generate}" HorizontalContentAlignment="Center">Generate</Button>
					<Button MinWidth="100" Command="{Binding Run}" HorizontalContentAlignment="Center">Execute</Button>
					<Button MinWidth="100" Command="{Binding Reset}" HorizontalContentAlignment="Center">Reset</Button>
				</StackPanel>
			</DockPanel>
		</Grid>

		<Grid Grid.Row="1" Grid.ColumnSpan="2">
			<TextBlock Margin="20,0,4,4" Text="{Binding Message}"></TextBlock>
		</Grid>

		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" IsVisible="{Binding !Populated}">
			<TextBlock FontSize="24" >Click Generate to create a graph</TextBlock>
			<TextBlock FontSize="16" FontStyle="Italic" >Select start and end node, then execute search</TextBlock>
		</StackPanel>

	</Grid>
	
</Window>
