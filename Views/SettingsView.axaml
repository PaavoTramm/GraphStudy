<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GraphStudy.Views.SettingsView">
	<StackPanel>
		<Label>Vertice count:</Label>
		<TextBox Text="{Binding Count}"></TextBox>
		<Label>Edge count:</Label>
		<TextBox Text="{Binding Edges}"></TextBox>
		<Label>Vertice diameter:</Label>
		<Slider Value="{Binding Diameter}" Minimum="10" Maximum="30"></Slider>
		<Label>Method:</Label>
		<ComboBox Items="{Binding Algorithms, Mode=OneWay}" SelectedIndex="{Binding AlgorithmIndex}"></ComboBox>
		<Label>Mouse action:</Label>
		<ComboBox Items="{Binding Tools, Mode=OneWay}" SelectedIndex="{Binding ToolIndex}"></ComboBox>
	</StackPanel>
</UserControl>
